	<error-page>
		<error-code>503</error-code>
		<location>/WEB-INF/error503.html</location>
	</error-page>
	
	<!-- Sequrity Settings -->
	
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>
	<security-role>
		<description>admins only</description>
		<role-name>admin</role-name>
	</security-role>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Essentials</web-resource-name>
			<url-pattern>/the/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>PTest-form</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/relogin.jsp</form-error-page>
		</form-login-config>
	</login-config>
	
</web-app>
